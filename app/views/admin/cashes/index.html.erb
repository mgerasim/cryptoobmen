<p id="notice"><%= notice %></p>

<h1>Валюта</h1>

<table>
  <thead>
    <tr>
      <th>Ед. валюты</th>
      <th>Полное наименование</th>
      <th>Логотип</th>
      <th>Тип</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_cashes.each do |admin_cash| %>
      <tr>
        <td><%= admin_cash.code %></td>
        <td><%= admin_cash.name %></td>
        <td>                            
    	    <span class="<%= admin_cash.icon %>"></span>
                                
        </td>
        <td><%= admin_cash.category %></td>
        <td><%= link_to 'Показать', admin_cash %></td>
        <td><%= link_to 'Редактировать', edit_admin_cash_path(admin_cash) %></td>
        <td><%= link_to 'Удалить', admin_cash, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

