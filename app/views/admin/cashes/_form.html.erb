<div class="container">
<%= form_with(model: admin_cash, local: true, :class=>"form-horizontal") do |form| %>

<div class="row">
  <div class="col-md-2"></div>  
    <div class="col-md-8">
    
  <% if admin_cash.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(admin_cash.errors.count, "error") %> prohibited this admin_cash from being saved:</h2>

      <ul>
      <% admin_cash.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Краткое наименование:", :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :code, id: :admin_cash_code, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label "Полное наименование:", :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
        <%= form.text_field :name, id: :admin_cash_name, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label "Логотип:", :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">

	<select class="selectpicker form-control" id="admin_cash_icon" name="admin_cash[icon]" data-show-icon="true">
	    <option data-content="<i class='iconpay-sberbank'></i> Сбербанк">iconpay-sberbank</option>
	    <option data-content="<i class='iconpay-alfa-bank'></i> Альфа Банк">iconpay-alfa-bank</option>
	    <option data-content="<i class='iconpay-tinkoff'></i> Тинькофф">iconpay-tinkoff</option>
	    <option data-content="<i class='iconpay-vtb'></i> ВТБ24">iconpay-vtb</option>
	    <option data-content="<i class='iconpay-visa-mastercard'></i> Visa/MasterCard RUB">iconpay-visa-mastercard</option>
	    <option data-content="<i class='iconpay-qakom'></i> QazKom Bank">iconpay-qakom</option>
	    <option data-content="<i class='iconpay-halyk'></i> Halyk Bank">iconpay-halyk</option>
	    <option data-content="<i class='iconpay-qiwi'></i> QIWI">iconpay-qiwi</option>
	    <option data-content="<i class='iconpay-yandex'></i> Яндекс.Деньги">iconpay-yandex</option>
	    <option data-content="<i class='iconpay-bitcoin'></i> Bitcoin">iconpay-bitcoin</option>
	    <option data-content="<i class='iconpay-ethereum'></i> Ethereum">iconpay-ethereum</option>
	    <option data-content="<i class='iconpay-etc'></i> Ethereum Classic">iconpay-etc</option>
	    <option data-content="<i class='iconpay-litecoin'></i> Litecoin">iconpay-litecoin</option>
	    
	</select>
	
    </div>
  </div>

  <div class="form-group">    
    <%= form.label "Тип:", :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
	<%= form.select :category, options_for_select([['Российский рубль', 1], ['Американский доллар', 2], ['Криптовалюта', 3] ], @category_id), {}, {:class => 'selectpicker form-control',  id: :admin_cash_category} %>
    </div>
  </div>
  
  <script>
  $('.selectpicker').selectpicker({
    
      size: 4
      });
      
  </script>

  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
         <%= form.submit "Сохранить", :class=>"btn btn-default" %>
      </div>
  </div>


</div>

<div class="col-md-2"></div>

</div>
  
<% end %>

</div>