<%= form_with(model: admin_cash, local: true, :class=>"form-horizontal") do |form| %>

<div class="row">
  <div class="col-md-2"></div>
  
  <div class="col-md-8">

  <% if admin_cash.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(admin_cash.errors.count, "error") %> prohibited this admin_cash from being saved:</h2>

      <ul>
      <% admin_cash.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Краткое наименование:", :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :code, id: :admin_cash_code, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label "Полное наименование:", :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
        <%= form.text_field :name, id: :admin_cash_name, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label "Логотип", :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
        <%= form.text_field :icon, id: :admin_cash_icon, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label "Тип", :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
        <%= form.number_field :category, id: :admin_cash_category, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
         <%= form.submit "Сохранить", :class=>"btn btn-default" %>
      </div>
  </div>
<% end %>


</div>

<div class="col-md-2"></div>

</div>