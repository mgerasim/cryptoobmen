<p id="notice"><%= notice %></p>

<h1>Направление обмена</h1>

<table class="table">
  <thead>
    <tr>
      <th>Отдаёте</th>
      <th>Получаете</th>
      <th>Коффициент конвертации (%)</th>
      <th>Комиссия в криптовалюте</th>
      <th>Курс обмена</th>
      <th>Биржа</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_converters.each do |admin_converter| %>
      <tr>
        <td><%= admin_converter.cash_a.fullname %></td>
        <td><%= admin_converter.cash_b.fullname %></td>
        <td><%= admin_converter.coeff_procent %></td>
        <td><%= admin_converter.cryptocommission_display %></td>
        <td><%= admin_converter.course_display %></td>
        <td><%= admin_converter.source_course_display %></td>
        <td><%= link_to 'Показать', admin_converter %></td>
        <td><%= link_to 'Редактировать', edit_admin_converter_path(admin_converter) %></td>
        <td><%= link_to 'Удалить', admin_converter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

