<p id="notice"><%= notice %></p>

<h1>Банки</h1>

<table class="table">
  <thead>
    <tr>
      <th>Логотип</th>
      <th>Наименование</th>
      <th>Валюта</th>
      <th>Счет</th>
      <th>ФИО</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <% if (bank.logo) %>
          <td><%= image_tag bank.logo.url(:med)  %></td>
        <% else %>
          <td></td>
        <% end %>
        
        <td><%= bank.name %></td>
        <td><%= bank._currencies %></td>
        <td><%= bank.account %></td>
        <td><%= bank.personal %></td>
        <td><%= link_to 'Показать', bank %></td>
        <td><%= link_to 'Редактировать', edit_bank_path(bank) %></td>
        <td><%= link_to 'Удалить', bank, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить банк', new_bank_path %>
