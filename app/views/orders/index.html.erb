<p id="notice"><%= notice %></p>

<h1>Заказы</h1>


<%= link_to 'Добавить', new_order_path, :class => "btn btn-primary" %>


<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th>#</th>
      <th>Дата создания</th>
      <th>Отдают</th>
      <th>Количество</th>
      <th>Получают</th>
      <th>Количество</th>
      <th>Электронный адрес</th>
      <th>ФИО</th>
      <th>Реквизиты отдачи</th>
      <th>Реквизиты получения</th>
      <th>Статус</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.created_at %></td>
        <td><%= order.currency_input %></td>
        <td><%= order.value_input %></td>
        <td><%= order.currency_output %></td>
        <td><%= order.value_output %></td>
        <td><%= order.email %></td>
        <td><%= order.fullname %></td>
        <td><%= order.input_account %></td>
        <td><%= order.output_account %></td>
        <td><%= order.statusname %></td>
        <td><%= link_to 'Показать', order %></td>
        <td><%= link_to 'Сменить статус', edit_order_path(order) %></td>
        <td><%= link_to 'Удалить', order, method: :delete, data: { confirm: 'Подтвердить?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить', new_order_path, :class => "btn btn-primary" %>
