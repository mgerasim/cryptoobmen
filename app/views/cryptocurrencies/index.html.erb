<p id="notice"><%= notice %></p>

<h1>Криптовалюты</h1>

<table class="table">
  <thead>
    <tr>
      <th>Логотип</th>
      <th>Код</th>
      <th>Наименование</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cryptocurrencies.each do |cryptocurrency| %>
      <tr>
        <td><%= image_tag cryptocurrency.logo.url(:med) %></td>
        <td><%= cryptocurrency.code %></td>
        <td><%= cryptocurrency.name %></td>
        <td><%= link_to 'Показать', cryptocurrency %></td>
        <td><%= link_to 'Редактировать', edit_cryptocurrency_path(cryptocurrency) %></td>
        <td><%= link_to 'Удалить', cryptocurrency, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить криптовалюту', new_cryptocurrency_path, :class => "btn btn-primary" %>
